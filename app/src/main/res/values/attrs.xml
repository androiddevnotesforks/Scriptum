<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Attr for control application common colors. (Switch by theme)  -->
    <declare-styleable name="ColorTheme">
        <!--  Colors for system navigationBar and divider  -->
        <attr name="clNavigationBar" format="color" />
        <attr name="clNavigationBarDivider" format="color" />

        <!--  Color for create accent on views: fab, button, image, text, etc.  -->
        <attr name="clAccent" format="color" />

        <!--  Color for accent ripple effect on click  -->
        <attr name="clAccentRipple" format="color" />

        <!--  Color for create smooth gradients related with clAccent  -->
        <attr name="clAccentGradientStart" format="color" />
        <attr name="clAccentGradientEnd" format="color" />

        <!--  Color for main app views: toolbar, panels, etc.  -->
        <attr name="clPrimary" format="color" />

        <!--  Color for dividers.  -->
        <attr name="clDivider" format="color" />

        <!--  Color for window background.  -->
        <attr name="clBackgroundWindow" format="color" />

        <!--  Color for views which placed upper clBackgroundWindow.  -->
        <attr name="clBackgroundView" format="color" />

        <!--  Color for views which placed upper clPrimary.  -->
        <attr name="clBackgroundEnter" format="color" />

        <!--  Color for important content. For give user main information.  -->
        <attr name="clContent" format="color" />

        <!--  Color for information content. For give user second information.  -->
        <attr name="clContentSecond" format="color" />

        <!--  Color for create contrast with clContent  -->
        <attr name="clContrast" format="color" />

        <!--  Color for not enabled views or hints.  -->
        <attr name="clDisable" format="color" />
    </declare-styleable>

    <!--  Attr for control card text and indicators color in list. (Switch by theme)  -->
    <declare-styleable name="CardTheme">
        <attr name="clIndicator" format="color" />
    </declare-styleable>

    <!--  Attr for control view styles. (Switch by theme)  -->
    <declare-styleable name="ElementTheme">
        <attr name="styleToolbar" format="integer" />
        <attr name="themePopup" format="integer" />
        <attr name="styleSheet" format="integer" />
        <attr name="styleProgressHorizontal" format="integer" />
    </declare-styleable>

</resources>