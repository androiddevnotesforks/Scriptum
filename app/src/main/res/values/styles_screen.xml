        <!--  This flag not works good with recyclerView (use a custom listener for fix it)  -->
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>

    <!--  Set colors of system UI not work from XML. This is for best understanding.  -->
    <style name="App.Screen.Dark.Main">
        <item name="android:windowBackground">?attr/clBackgroundWindow</item>

        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <!-- -->

    <!--  Set colors of system UI not work from XML. This is for best understanding.  -->
    <style name="App.Screen.Splash" parent="App.Screen.Dark">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>