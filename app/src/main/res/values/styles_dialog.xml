<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Dialog" />

    <style name="App.Dialog.Alert" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">?attr/clAccent</item>

        <!--  Title text color  -->
        <item name="android:textColorPrimary">?attr/clContent</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/App.Dialog.PaleButton</item>

        <!--  For overScrollMode  -->
        <item name="android:colorEdgeEffect">?attr/clAccentRipple</item>
        <!--  This flag works good with alert dialogs  -->
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>

    <style name="App.Dialog.Alert.NotificationsHelp">
        <item name="buttonBarNegativeButtonStyle">@style/App.Dialog.AccentButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/App.Dialog.PaleButton</item>
    </style>

    <style name="App.Dialog.DateTime" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">?attr/clAccent</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/App.Dialog.PaleButton</item>

        <!--  For overScrollMode  -->
        <item name="android:colorEdgeEffect">?attr/clAccentRipple</item>
        <!--  This flag works good with alert dialogs  -->
        <item name="android:overScrollMode">ifContentScrolls</item>
    </style>

    <style name="App.Dialog.AccentButton" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/clAccent</item>
    </style>

    <style name="App.Dialog.PaleButton" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/clContentSecond</item>
    </style>

</resources>