<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App.Style.SheetNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:theme">@style/App.Theme.SheetNavigation</item>
    </style>

    <style name="App.Theme.SheetNavigation">
        <item name="android:textColorSecondary">?attr/clContentSecond</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationView">
        <item name="colorControlHighlight">?attr/clAccentRipple</item>
    </style>

    <!-- CardView -->

    <style name="Card" />

    <style name="Card.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_card_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/item_card_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/item_card_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/item_card_horizontal_margin</item>
        <item name="cardElevation">@dimen/item_card_elevation</item>
        <item name="cardCornerRadius">@dimen/item_card_radius</item>
    </style>

    <style name="Card.Item.Common">
        <item name="cardBackgroundColor">?attr/clBackgroundView</item>
    </style>

    <style name="Card.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/text_card_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_card_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_card_margin</item>
        <item name="android:layout_marginTop">@dimen/text_card_margin</item>
        <item name="cardElevation">@dimen/item_card_elevation</item>
        <item name="cardCornerRadius">@dimen/item_card_radius</item>
        <item name="cardBackgroundColor">?attr/clBackgroundView</item>
    </style>

    <!-- Recyclerview -->

    <style name="RecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="RecyclerView.Normal">
        <item name="android:paddingBottom">@dimen/recycler_vertical_margin</item>
        <item name="android:paddingTop">@dimen/recycler_vertical_margin</item>
        <item name="android:paddingStart">@dimen/recycler_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/recycler_horizontal_margin</item>
    </style>

    <style name="RecyclerView.Small">
        <item name="android:paddingBottom">@dimen/recycler_small_vertical_margin</item>
        <item name="android:paddingTop">@dimen/recycler_small_vertical_margin</item>
        <item name="android:paddingStart">@dimen/recycler_small_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/recycler_small_horizontal_margin</item>
    </style>

    <!-- View -->

    <style name="View" />

    <style name="View.Color" />

    <style name="View.Color.Vertical">
        <item name="android:layout_width">@dimen/color_vertical_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ic_color_indicator</item>
    </style>

    <style name="View.Color.Vertical.Note">
        <item name="android:layout_marginStart">@dimen/item_content_between_space</item>
        <item name="android:layout_marginEnd">@dimen/color_vertical_shift_space</item>
    </style>

    <style name="View.Color.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/color_horizontal_size</item>
    </style>

    <!-- Divider -->

    <style name="Divider">
        <item name="android:background">?attr/clDivider</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_1dp</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/layout_1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Container -->

    <style name="Container"/>

    <style name="Container.Info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container.Note">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Container.Note.Click">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Container.Note.Content">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/item_container_space</item>
    </style>

    <style name="Container.Roll"/>

    <style name="Container.Roll.Click">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Container.ToolbarNote" />

    <style name="Container.ToolbarNote.Scroll">
        <item name="android:layout_gravity">center</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="Container.Print">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/item_container_space</item>
    </style>

    <!-- Text -->

    <style name="Text" />

    <style name="Text.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Info.Title">
        <item name="android:padding">@dimen/info_title_inside_space</item>
        <item name="android:layout_marginBottom">@dimen/info_content_bottom_space</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textSize">@dimen/info_title_text</item>
    </style>

    <style name="Text.Info.Details">
        <item name="android:paddingLeft">@dimen/info_details_horizontal_inside_space</item>
        <item name="android:paddingTop">@dimen/info_details_vertical_inside_space</item>
        <item name="android:paddingRight">@dimen/info_details_horizontal_inside_space</item>
        <item name="android:paddingBottom">@dimen/info_details_vertical_inside_space</item>
        <item name="android:textAppearance">@style/Appearance.Second</item>
        <item name="android:textSize">@dimen/info_details_text</item>
    </style>

    <style name="Text.SmallCard"/>

    <style name="Text.SmallCard.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/item_content_between_space</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textSize">@dimen/item_first_text</item>
    </style>

    <style name="Text.SmallCard.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Appearance.Second</item>
        <item name="android:textSize">@dimen/item_second_text</item>
    </style>

    <style name="Text.SmallCard.Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Appearance.Indicator</item>
        <item name="android:textSize">@dimen/item_second_text</item>
    </style>

    <style name="Text.SmallCard.Print">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textSize">@dimen/item_second_text</item>
    </style>

    <style name="Text.SmallCard.Print.Order">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.About">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.About.Title">
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="Text.About.Subtitle">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Appearance.Second</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="Text.Note"/>

    <style name="Text.Note.Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/item_content_between_space</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/item_first_text</item>
    </style>

    <style name="Text.Note.Roll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/item_content_horizontal_space</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textSize">@dimen/item_first_text</item>
    </style>

    <style name="Text.Note.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textSize">@dimen/item_first_text</item>
    </style>

    <style name="Text.Note.Info">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/Appearance.Second</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/item_third_text</item>
    </style>

    <style name="Text.ToolbarNote" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLength">@integer/note_name_max_length</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textColorHint">?attr/clContentSecond</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!-- EditText -->

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/clContent</item>
        <item name="android:textColorHint">?attr/clDisable</item>
    </style>

    <style name="EditText.TextNote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">@dimen/text_card_space</item>
        <item name="android:textSize">@dimen/text_card_text</item>
    </style>

    <style name="EditText.TextNote.Enter">
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:inputType">
            textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine
        </item>
    </style>

    <style name="EditText.TextNote.Read">
        <item name="android:linksClickable">true</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="EditText.SingleRow">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/layout_8dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_8dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_8dp</item>
        <item name="android:layout_marginRight">@dimen/layout_8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="EditText.Roll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/item_roll_start_space</item>
        <item name="android:paddingTop">@dimen/item_roll_space</item>
        <item name="android:paddingEnd">@dimen/item_roll_space</item>
        <item name="android:paddingBottom">@dimen/item_roll_space</item>
        <item name="android:textSize">@dimen/item_roll_text</item>
    </style>

    <style name="EditText.Roll.Read">
        <item name="android:autoLink">all</item>
        <item name="android:gravity">top</item>
        <item name="android:linksClickable">true</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="EditText.ToolbarNote" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:imeOptions">actionNext|flagNoFullscreen</item>
        <item name="android:inputType">textCapSentences|textAutoCorrect|textAutoComplete</item>
        <item name="android:maxLength">@integer/note_name_max_length</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/Appearance.Main</item>
        <item name="android:textColorHint">?attr/clContentSecond</item>
    </style>

    <!-- Button -->

    <style name="Button"/>

    <style name="Button.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/layout_4dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_4dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_4dp</item>
        <item name="android:layout_marginRight">@dimen/layout_4dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/layout_8dp</item>
    </style>

    <style name="Button.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/layout_8dp</item>
    </style>

    <style name="Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/clAccent</item>
        <item name="android:textSize">@dimen/button_borderless_text</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/button_borderless_inside_horizontal_space</item>
        <item name="android:paddingEnd">@dimen/button_borderless_inside_horizontal_space</item>
        <item name="android:paddingTop">@dimen/button_borderless_inside_vertical_space</item>
        <item name="android:paddingBottom">@dimen/button_borderless_inside_vertical_space</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Roll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Image -->

    <style name="Image"/>

    <style name="Image.Info">
        <item name="android:layout_width">@dimen/info_icon_size</item>
        <item name="android:layout_height">@dimen/info_icon_size</item>
        <item name="android:layout_marginBottom">@dimen/info_content_bottom_space</item>
    </style>

    <style name="Image.Logo">
        <item name="android:layout_width">@dimen/icon_128dp</item>
        <item name="android:layout_height">@dimen/icon_128dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@mipmap/img_logo</item>
    </style>

    <style name="Image.Note">
        <item name="android:layout_width">@dimen/item_small_icon_size</item>
        <item name="android:layout_height">@dimen/item_small_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Image.Note.Check">
        <item name="android:tint">?attr/clContent</item>
    </style>

    <style name="Image.Note.Info">
        <item name="android:tint">?attr/clIndicator</item>
    </style>

    <style name="Image.Rank">
        <item name="android:layout_width">@dimen/item_small_icon_size</item>
        <item name="android:layout_height">@dimen/item_small_icon_size</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">@dimen/item_count_icon_space</item>
        <item name="android:layout_marginStart">@dimen/item_count_icon_space</item>
        <item name="android:tint">?attr/clIndicator</item>
    </style>

    <!--  Toolbar  -->

    <style name="Toolbar" />

    <!--  Flex toolbar for put something inside it (not only toolbar)  -->
    <style name="Toolbar.Flex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Toolbar.Fix">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!--  Other  -->

    <style name="ProgressBar"/>

    <style name="ProgressBar.Center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>