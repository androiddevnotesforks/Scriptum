        android:icon="@mipmap/shortcut_add"
        android:shortcutId="create_text_shortcut"
        android:shortcutLongLabel="@string/shortcut_medium_text_label"
        android:shortcutShortLabel="@string/shortcut_short_text_label">

        <intent android:action="android.intent.action.MAIN"
            android:targetClass="sgtmelon.scriptum.infrastructure.screen.splash.SplashActivity"
            android:targetPackage="sgtmelon.scriptum">

            <!--  {"type":"sgtmelon.scriptum.infrastructure.screen.splash.SplashOpen.NewNote","noteType":"TEXT"}  -->
            <extra android:name="INTENT_SPLASH_OPEN"
                android:value="{&quot;type&quot;:&quot;sgtmelon.scriptum.infrastructure.screen.splash.SplashOpen.NewNote&quot;,&quot;noteType&quot;:&quot;TEXT&quot;}" />
        </intent>
    </shortcut>
</shortcuts>