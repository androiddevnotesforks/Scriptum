                android:value="{&quot;type&quot;:&quot;sgtmelon.scriptum.infrastructure.screen.splash.SplashOpen.NewNote&quot;,&quot;noteType&quot;:&quot;ROLL&quot;}" />
        </intent>
    </shortcut>

    <!--  Location: top  -->
