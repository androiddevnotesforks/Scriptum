        android:icon="@mipmap/shortcut_add"
        android:shortcutId="create_roll_shortcut"
        android:shortcutLongLabel="@string/shortcut_medium_roll_label"
        android:shortcutShortLabel="@string/shortcut_short_roll_label">

        <intent android:action="android.intent.action.MAIN"
            android:targetClass="sgtmelon.scriptum.infrastructure.screen.splash.SplashActivity"
            android:targetPackage="sgtmelon.scriptum">

            <!--  {"type":"sgtmelon.scriptum.infrastructure.screen.splash.SplashOpen.NewNote","noteType":"ROLL"}  -->
