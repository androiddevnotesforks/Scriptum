<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView style="@style/Card.Item.Common">

        <LinearLayout
            style="@style/Container.Print"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_content_between_space">

                <TextView
                    android:id="@+id/name_text"
                    style="@style/Text.SmallCard.Print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/item_content_between_space"
                    tools:text="Name: RHCP" />

                <View style="@style/Divider.Vertical" />

                <TextView
                    android:id="@+id/size_text"
                    style="@style/Text.SmallCard.Print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/item_content_between_space"
                    tools:text="Size: 10 Mb" />

            </LinearLayout>

            <TextView
                android:id="@+id/path_text"
                style="@style/Text.SmallCard.Print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Path: root/android/0/.../" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>