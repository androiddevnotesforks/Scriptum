<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/parent_container"
        style="@style/Card.Item.Common">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/item_roll_icon_horizontal_space"
                tools:background="@color/accent_ripple_light">

                <CheckBox
                    android:id="@+id/check_box"
                    style="@style/Button.Roll.Read"
                    tools:checked="true" />

                <!--  Button which displays above checkBox for ripple effect on click  -->
                <!--  Set contentDescription in UI class  -->
                <ImageButton
                    android:id="@+id/click_button"
                    style="@style/Container.Roll.Click"
                    tools:ignore="ContentDescription" />

            </FrameLayout>

            <TextView
                android:id="@+id/roll_text"
                style="@style/EditText.Roll.Read"
                tools:text="@string/preview_note_roll"
                tools:textColor="?attr/clContrast" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>