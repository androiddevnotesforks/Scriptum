<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_card_horizontal_margin"
        android:layout_marginTop="@dimen/item_card_vertical_margin"
        android:layout_marginEnd="@dimen/item_card_horizontal_margin"
        android:layout_marginBottom="@dimen/item_card_vertical_margin"
        android:padding="@dimen/item_container_space">

        <TextView
            android:id="@+id/title_text"
            style="@style/Text.SmallCard.Title"
            android:layout_marginBottom="0dp"
            android:singleLine="false"
            android:textColor="?attr/clAccent"
            tools:text="Test title" />

    </FrameLayout>

</layout>