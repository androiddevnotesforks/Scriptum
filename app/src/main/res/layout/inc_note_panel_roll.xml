<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_roll_note">

    <data>

        <import type="sgtmelon.scriptum.R" />

        <import type="android.view.View" />

        <import
            alias="Type"
            type="sgtmelon.scriptum.infrastructure.model.key.preference.NoteType" />

        <variable
            name="isDividerHide"
            type="boolean" />

        <variable
            name="menuCallback"
            type="sgtmelon.scriptum.infrastructure.screen.note.NoteMenu" />

        <variable
            name="isDataLoad"
            type="boolean" />

        <variable
            name="item"
            type="sgtmelon.scriptum.cleanup.domain.model.item.NoteItem" />

        <variable
            name="isRankEmpty"
            type="boolean" />

        <variable
            name="isEditMode"
            type="boolean" />

        <variable
            name="historyMove"
            type="sgtmelon.scriptum.data.noteHistory.HistoryMoveAvailable" />
    </data>

    <!--  Color needed because divider has horizontal spaces.  -->
    <LinearLayout
        android:id="@+id/parent_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/clPrimary"
        android:orientation="vertical"
        tools:layout_gravity="center">

        <View
            android:id="@+id/panel_divider_view"
            style="@style/Divider.Horizontal"
            android:layout_marginHorizontal="@dimen/layout_8dp"
            android:visibility='@{!isDividerHide ? View.VISIBLE : View.GONE}'
            tools:visibility="visible" />

        <include
            android:id="@+id/content"
            layout="@layout/inc_note_panel_content"
            app:historyMove='@{historyMove}'
            app:isDataLoad='@{isDataLoad}'
            app:isEditMode='@{isEditMode}'
            app:isRankEmpty='@{isRankEmpty}'
            app:item='@{item}'
            app:menuCallback='@{menuCallback}' />

    </LinearLayout>

</layout>