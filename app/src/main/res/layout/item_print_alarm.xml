<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView style="@style/Card.Item.Common">

        <LinearLayout
            style="@style/Container.Print"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text"
                style="@style/Text.SmallCard.Print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/item_content_between_space"
                tools:text="ID: 1" />

            <View style="@style/Divider.Vertical" />

            <TextView
                android:id="@+id/note_id_text"
                style="@style/Text.SmallCard.Print.Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/item_content_between_space"
                tools:text="NT_ID: 10" />

            <View style="@style/Divider.Vertical" />

            <TextView
                android:id="@+id/date_text"
                style="@style/Text.SmallCard.Print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_content_between_space"
                tools:text="DT: 01:20:2013 12:00:00" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>